<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="1080px"
    android:layout_height="2400px"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/registragion_layout"
    tools:context=".signup">

    <!-- Header Text -->

    <!-- Registration Card -->
    <TextView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="80dp"
        android:text="GARBAGE COLLECTION
        TRACKER AND
        SCHEDULE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="19dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- City Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current City"
                android:textSize="16dp"/>

            <Spinner
                android:id="@+id/spinnerCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:textAlignment="textStart"
                />

            <!-- Barangay Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registered Barangay"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinnerBarangay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:textAlignment="textStart" />

            <!-- Home Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home Address"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Lot, Block, Street, Subdivision"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:textSize="18dp" />

            <!-- Mobile Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="+63 *** *** ****"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:textSize="18dp"
                android:inputType="phone" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Minimum of 8 characters"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="18dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/SignupButton"
                android:layout_width="150dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/darkgreen"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Already Have Account Text -->
    <TextView
        android:id="@+id/alreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Already have an account?"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="21dp"/>
</LinearLayout>
